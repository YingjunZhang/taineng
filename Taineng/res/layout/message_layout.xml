<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_title_height"
        layout="@layout/top_layout"/>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:background="@drawable/bigback"
	    >
	    <LinearLayout 
	        android:layout_width="0dp"
	        android:layout_weight="4"
	        android:layout_height="fill_parent"
	        android:gravity="center_horizontal"
	        android:paddingTop="15dp"
	        android:paddingBottom="25dp"
	        android:paddingLeft="70dp"
	        android:paddingRight="70dp"
	        android:orientation="vertical"
	        
	        >
	        <TextView 
	            android:id="@+id/message_title_txt"
	            android:layout_width="250dp"
	            android:layout_height="50dp"
	            android:background="@drawable/message_title_txt_back"
	            android:layout_marginTop="10dp"
	            android:gravity="center"
	            android:textSize="23sp"
	            android:padding="10dp"
	            />
	        <TextView 
	            android:id="@+id/message_info_txt"
	            android:layout_width="match_parent"
	            android:layout_height="320dp"
	            android:singleLine="false"
	            android:maxLines="6"
	            android:textSize="20sp"
	            android:layout_marginTop="15dp"
	            android:background="#c2d0da"
	            android:padding="10dp"
	            />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="0dp" 
	        android:layout_weight="1"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	        android:background="#b07bc8e8"
	        >
	        <include 
	            android:layout_width="fill_parent"
	            android:layout_height="50dp" 
	            layout="@layout/weidu_title"
	            />
	        <ListView 
	            android:id="@+id/message_weidu_lv"
	            android:layout_width="fill_parent"
	            android:layout_height="0dp" 
	            android:layout_weight="1"
	            />
	        <include
	            android:layout_width="fill_parent"
	            android:layout_height="50dp"
	            layout="@layout/yidu_title"
	            />
	        <ListView 
	            android:id="@+id/message_yidu_lv"
	            android:layout_width="fill_parent"
	            android:layout_height="0dp" 
	            android:layout_weight="1"
	            />
	    </LinearLayout>
	</LinearLayout>
    

</LinearLayout>