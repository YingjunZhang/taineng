<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/top_title_height"
        layout="@layout/top_layout"/>
    <FrameLayout 
        
        android:layout_width="fill_parent"
        android:layout_height="0dp" 
        android:layout_weight="1"
        android:padding="50dp"
        android:background="@drawable/bigback"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"          
            android:orientation="vertical"
            android:background="@drawable/small_back"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="65dp" 
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/analyse_chaobiao_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:background="@drawable/daohangtiao"
                    android:textSize="23sp"
                    android:gravity="center"
                    />
                <Button
                    android:id="@+id/analyse_setup_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:background="@drawable/daohangtiao_light"
                    android:textSize="23sp"
                    android:gravity="center"
                    />
            </LinearLayout>
            
            <LinearLayout 
                android:id="@+id/analyse_content_ll"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                ></LinearLayout>
        </LinearLayout>
    </FrameLayout>
    

</LinearLayout>