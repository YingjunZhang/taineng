<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp">
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"  
        >
        <Spinner 
            android:id="@+id/system_setup_scheme_spi"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:spinnerMode="dropdown"
            android:textSize="23sp"
                        />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
        android:layout_width="fill_parent" 
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        	<CheckBox
            	android:id="@+id/scheme_ifuse_cb"
            	android:layout_width="200dp"
            	android:layout_height="fill_parent"
            	android:layout_alignParentLeft="true"
            	android:layout_marginLeft="15dp"
            	android:text="是否启用方案"
            	android:textColor="#1B1B1B"
            	android:textSize="22sp"
            	/>
        	
       </LinearLayout>
        <!-- 采集间隔设置 -->
       <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="80dp" 
        
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        >
        
        <TextView
            android:layout_height="fill_parent" 
            android:layout_width="120dp" 
            
            android:text="采集间隔:"
            android:gravity="center_vertical|right"
            android:textColor="#1B1B1B"
            android:textSize="22sp"
            />
        <RadioGroup 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            
            >
            <RadioButton 
                android:id="@+id/caiji_hour_rdb"
                android:layout_height="fill_parent"
                android:layout_width="70dp" 
                android:text="时"
                android:textColor="#1B1B1B"
                android:textSize="20sp"
                />
            <RadioButton 
                android:id="@+id/caiji_minute_rdb"
                android:layout_height="fill_parent"
                android:layout_width="70dp" 
                android:text="分"
                android:textColor="#1B1B1B"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:checked="true"
                />
            <RadioButton 
                android:id="@+id/caiji_second_rdb"
                android:layout_height="fill_parent"
                android:layout_width="70dp" 
                android:text="秒"
                android:textColor="#1B1B1B"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                />
            
        </RadioGroup>
        <EditText 
            android:id="@+id/caiji_timespace_edt"
            android:layout_height="45dp" 
            android:layout_width="100dp" 
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
   
        </LinearLayout>
        <!-- 存储间隔设置 -->
       <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="80dp" 
        
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        >
        
        <TextView
            android:layout_height="fill_parent" 
            android:layout_width="120dp" 
            
            android:text="存储间隔:"
            android:gravity="center_vertical|right"
            android:textColor="#1B1B1B"
            android:textSize="22sp"
            />
        <RadioGroup 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            
            >
            <RadioButton 
                android:id="@+id/cunchu_hour_rdb"
                android:layout_height="fill_parent"
                android:layout_width="70dp" 
                android:text="时"
                android:textColor="#1B1B1B"
                android:textSize="20sp"
                />
            <RadioButton 
                android:id="@+id/cunchu_minute_rdb"
                android:layout_height="fill_parent"
                android:layout_width="70dp" 
                android:text="分"
                android:textColor="#1B1B1B"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:checked="true"
                />
            <RadioButton 
                android:id="@+id/cunchu_second_rdb"
                android:layout_height="fill_parent"
                android:layout_width="70dp" 
                android:text="秒"
                android:textColor="#1B1B1B"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                />
            
        </RadioGroup>
        <EditText 
            android:id="@+id/cunchu_timespace_edt"
            android:layout_height="45dp" 
            android:layout_width="100dp" 
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
   
        </LinearLayout>
        <!-- 保存按钮 -->
       <RelativeLayout 
        android:layout_width="fill_parent" 
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/scheme_save_btn"
            android:layout_width="110dp"
            android:layout_height="fill_parent"  
            android:text="保存"
            android:textColor="#1B1B1B"
            android:textSize="23sp"
            android:background="@drawable/button_back"
            />
    </RelativeLayout>
        
    </LinearLayout>
    

</LinearLayout>