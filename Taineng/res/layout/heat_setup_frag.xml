<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout 
        android:layout_width="fill_parent" 
        android:layout_height="85dp" 
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/heat_setup_wenkongisuse_cb"
            android:layout_width="200dp" 
            android:layout_height="match_parent"
            android:text="是否连接温控阀"
            android:textSize="23sp"
            />
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="110dp"
            android:layout_marginLeft="10dp"
            android:text="表地址:"
            android:textSize="23sp"
            android:gravity="center_vertical|right"
            />
        <EditText 
            android:id="@+id/heat_setup_address_edt"
            android:layout_width="300dp" 
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:hint="表地址之间用逗号分割,注意用英文字符"
            />
        <Button
            android:id="@+id/heat_setup_address_save_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:text="保存"
            android:textSize="21sp"
            android:background="@drawable/button_back"
            />
    </LinearLayout>
   <LinearLayout
       android:id="@+id/heat_setup_wenkong_content_ll"
       android:layout_width="fill_parent"
       android:layout_height="85dp"
       android:orientation="horizontal"
       >
       <TextView 
           
           android:layout_width="350dp"
           android:layout_height="match_parent"
           android:textSize="22sp"
           android:gravity="center_vertical|left"
           android:text="温控阀当前模式:"
           />
       <TextView 
           android:id="@+id/heat_setup_wenkong_nowmodel_tv"
           android:layout_width="100dp"
           android:layout_height="match_parent"
           android:textSize="22sp"
           android:gravity="center_vertical|right"
           android:text="简单模式"
           />
       <Button
            android:id="@+id/heat_setup_wenkong_setup_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:text="模式设定"
            android:textSize="21sp"
            android:background="@drawable/button_back"
            />
   </LinearLayout>

</LinearLayout>